<%= render 'layouts/colored_header' %>
<div id="menu-of-the-day-wrapper">

  <br><br>
  <h3>Récapitulatif du menu choisi </h3>
  <div class="category-wrapper-show">
    <% @servings.each do |serving|%>
    <div class="serving-choices">
      <div class="meal-detail">
          <div class="card">
            <img src="https://cache.marieclaire.fr/data/photo/w1000_ci/5b/avocats-aux-crevettes.jpg" class="meal-image" >
            <div class="card-body">
              <h5 class="meal-description card-title"><%= serving.food_supply.name %></h5>
              <p class="card-text">Des infos présentant le plat et la recette, brievement. Plus d'info sont dispo (AJAAAAX) via le bouton ci-dessous comme les ingrédients et les allergènes présents.</p>
              <a href="#" class="btn btn-sm btn-primary">Plus d'info</a>
            </div>
          </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to "Supprimer ma commande", user_profile_user_meal_path(@user, @profile, params[:id]),  class: "btn btn-danger delete-meal", method: :DELETE %>
</div>
<br/><br/><br/><br/><br/>
<%= render 'home/footer' %>

