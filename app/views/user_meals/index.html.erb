<%= render 'layouts/colored_header' %>

<h1 class="meal-title">Mes commandes :</h1>

<% if @meals.exists? %>
	<div class="card meals-index">
		<% @meals.each do |meal| %>
			<div class="card meal-card">
			  <div class="meal-header">
			 	Commande N° <%= meal.id %> <span class="blockquote-footer"><%= meal.created_at.strftime("%d/%m/%Y") %></span>
			  </div>
				  <div class="card-body meal-text">
				    <blockquote class="blockquote mb-0">
				      <% meal.servings.each do |serving| %>
					<strong><%= serving.meal_category %> : </strong><%= serving.food_supply.name %> |
				<% end %> <br/>
				    </blockquote>
			  	  </div>
		<% end %>
	</div>
<% else %>
	<div class="card meals-index meals-index1">
	<p>TU N'AS AUCUNE COMMANDE ENREGISTRÉE, POUR PASSER COMMANDE : <br/>
		<%= link_to "C'EST PAR ICI", new_user_profile_user_meal_path(@user.id, @profile.id) %></p>
	</div>
<%end %>