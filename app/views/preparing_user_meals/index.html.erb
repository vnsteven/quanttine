<div id="wrapper">
	<%= render 'admins/side_bar' %>
	<div id="content-wrapper" class="d-flex flex-column">
		<%= render 'admins/top_bar' %>
		<div class="container-fluid">
			<div class="card shadow mb-4">
				<div class="card-header py-3">
					<h6 class="m-0 font-weight-bold">Commande des élèves</h6>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered" id="quantityTable" width="100%" cellspacing="0">
							<thead>
								<tr>
									<th>Prénom</th>
									<th>Nom</th>
									<th>Commande</th>
									<th>Catégorie</th>
									<th>Heure</th>
									<th>Date</th>
									<th></th>
								</tr>
							</thead>
							<% @preparing_user_meals.each do |preparation| %>
							<tbody>
								<tr>
									<% 	if preparation.user_meal.profile.school == current_admin.school %>

									<td><%= preparation.user_meal.profile.user.first_name %></td>
									<td><%= preparation.user_meal.profile.user.last_name %></td>
									<td><%= preparation.serving.food_supply.name %></td>
									<td><%= preparation.serving.meal_category %></td>		
									<td><%= preparation.user_meal.created_at.strftime("%H:%M:%S") %></td>	
									<td><%= preparation.user_meal.created_at.strftime("%d-%m-%Y") %></td>
									<td><%= link_to "", admin_preparing_user_meal_path(current_admin, preparation), method: :delete, class: "fas fa-trash-alt text-secondary"%></td>
									
									<% end %>
								</tr>
							</tbody>
							<% end %>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>