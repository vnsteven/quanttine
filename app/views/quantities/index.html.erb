<div id="wrapper">
	<%= render 'admins/side_bar' %>
	<div id="content-wrapper" class="d-flex flex-column">
		<%= render 'admins/top_bar' %>
		<div class="container-fluid">
			<div class="card shadow mb-4">
				<div class="card-header py-3">
					<h6 class="m-0 font-weight-bold">Aliments en stock</h6>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-paging" id="quantityTable" width="100%" cellspacing="0">
							<thead>
								<tr>
									<th>Nom</th>
									<th>Quantit√©</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<% @quantities.each do |quantity| %>
								<tr id="quantity<%= quantity.food_supply.id %>">
									<td><%= quantity.food_supply.name %></td>
									<td><%= quantity.quantity %></td>
									<td><%= link_to "", admin_food_supply_path(current_admin, quantity.food_supply.id), method: :delete, remote: true, class: "fas fa-trash-alt text-secondary"%></td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>