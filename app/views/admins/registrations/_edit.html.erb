<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="login-title">Edit <%= resource_name.to_s.humanize %></h2>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>

      <div class="modal-body">

        <%= form_for(resource_admin, as: resource_name_admin, url: registration_path(resource_name_admin), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource_admin %>

        <div class="form-inputs">

          <div class="field form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name" %>
          </div>  

          <div class="field form-group">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
          </div>

          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="field form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
          </div>

        </div>

        <div class="modal-footer">
          <div class="form-actions">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
          <% end %>

          <hr>
          <div class="row">
            
          <h3>Cancel my account</h3>

          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

          <%= link_to "Back", :back %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
