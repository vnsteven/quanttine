<div id="wrapper">
	<%= render 'admins/side_bar' %>
	<div id="content-wrapper" class="d-flex flex-column">
		<%= render 'admins/top_bar' %>
		<%= render 'helpers/flash' %>
		<div class="container-fluid">
			<div class="container">
				<div class="card shadow mb-4">
					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold">Créer un nouveau menu</h6>
					</div>
					<div class="card-body">
						<div class="field form-group">
							<%= form_tag url_for(controller: 'school_meals', action: 'create'), method: 'post' do %>
							<%= date_field_tag :date %>
							<br /><br />
							<%= collection_select :meal_category, :meal_name, Serving.all, :meal_category, :meal_category, prompt: "Catégorie" %>
							<br /><br />
							<%= collection_select :food_name, :food_id, FoodSupply.all, :id, :name, prompt: "Aliment" %>
							<br /><br />
							<%= submit_tag "Envoyer" %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
