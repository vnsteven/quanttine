<div id="wrapper">
	<%= render 'admins/side_bar' %>
	<div id="content-wrapper" class="d-flex flex-column">
		<%= render 'admins/top_bar' %>

		<div class="container-fluid">
			<div class="container-fluid">

				<div class="row">

					<div class="col-lg-6">

						<!-- Basic Card Example -->
						<div class="card shadow mb-4">
							<div class="card-header py-3">
								<h6 class="m-0 font-weight-bold">Créer le menu du lendemain</h6>
							</div>
							<div class="card-body">
								<div class="field form-group">
									<%= form_tag url_for(controller: 'school_meals', action: 'create'), method: 'post' do %>
									<%= date_field_tag :date, "#{tomorrow}", class: 'form-control', id: "datePicker"  %>
									<br />
									<%= select_tag :meal_category, options_for_select(serving_list), prompt: "Catégorie", class: "form-control" %>
									<br />
									<%= select_tag :food_name, options_for_select(food_supply_list), prompt: "Aliment", class: "form-control" %>
									<br />
									<%= submit_tag "Envoyer", class: "btn btn-primary form-control" %>
									<% end %>
								</div>
							</div>
						</div>

					</div>
					<div class="col-lg-6">

						<!-- Basic Card Example -->
						<div class="card shadow mb-4">
							<div class="card-header py-3">
								<h6 class="m-0 font-weight-bold">Menu du <%= tomorrow_france %></h6>
							</div>
							<div class="card-body">
								<div class="table-responsive">
									<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
										<thead>
											<tr>
												<th>Nom</th>
												<th>Catégorie</th>
											</tr>
										</thead>
										<% @school_meals.each do |school_meal| %>
										<% school_meal.servings.each do |serving| %>
										<tbody>
											<tr>					
												<td><%= serving.food_supply.name %></td>
												<td><%= serving.meal_category %></td>
											</tr>
										</tbody>
										<% end %>
										<% end %>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
