<div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="login-title">Connexion Élève</h2>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>

      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-inputs">
          <div class="field">
            <div class="input-container">
              <i class="fas fa-at icon1"></i>
              <%= f.email_field :email, class: "form-control input-field writing", autofocus: true, autocomplete: "email", placeholder: "Email" %>
            </div>
          </div>

          <br />

          <div class="field">
           <div class="input-container">
            <i class="fas fa-lock icon1"></i>
            <%= f.password_field :password, class: "form-control input-field writing", autocomplete: "current-password", placeholder: "Mot de passe" %>
          </div>
        </div>

        <br />

        <% if devise_mapping.rememberable? %>
        <div class="field custom-control custom-checkbox">
          <%= f.check_box :remember_me, class: "custom-control-input" %>
          <%= f.label :remember_me, class: "custom-control-label" %>
        </div>
        <% end %>

        <br />

        <%= link_to "Mot de passe oublié ?", new_user_password_path, class: "text-black" %><br />
        <%= link_to "Pas encore de compte ?", new_user_registration_path, class: "text-black", 'data-toggle' => "modal", 'data-target' => "#modalSignup" %>
      </div>

    </div>

    <div class="modal-footer">
      <div class="form-actions">
        <%= f.submit "Se connecter", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>


